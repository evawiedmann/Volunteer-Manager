<form action="/projects" method="post">
<div class="form-group">
  <label for="title_name">Project Title</label>
  <input name="title_name" class="form-control" type="text" required>
</div>
<button type="submit" class="btn btn-primary">Create Project</button>
</form>

<h3><center>Current Projects</center></h3>
<% if @projects.any? %>
<ul>
  <% @projects.each do |project| %>
  <li><a href="/projects/<%= project.id %>"><strong><%= project.title %></strong></li>
    <% end %>
  </ul>
  <% else %>
  <p>No projects to display.</p>
  <% end %>
