<h2>Project Title: <%= @volunteer.projects.title %></h2>
<h3>Volunteer Name: <%= @volunteer.name %> </h3>


<form action="/projects/<%= @volunteer.projects.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="volunteer_name">Give the volunteer a new name!</label>
  <input id="volunteer_name" name="volunteer_name" type="text">

  <button type="submit">Update Volunteer</button>
</form>

<form action="/projects/<%= @volunteer.projects.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Volunteer</button>
</form>

<a href="/projects/<%= @volunteer.projects.id %>">Back</a>
